
public class Main {
	
	public static void main(String[] args) {
		
		byte myByte = 10;
		short myShort = 20;
		int myInt = 50;
		
		long myLong = 50000L + 10L * (myByte + myShort + myInt);
		short myShort2 = (short) (50000 + 10 * (myByte + myShort + myInt)); //Too big to handle
		byte myByte2 = (byte) (1000 + 10 * (myByte + myShort + myInt)); //Way too big to handle
		
		System.out.println("My challenge: " + myLong);
		System.out.println("My challenge: " + myShort2); //Wrong obviously
		System.out.println("My challenge: " + myByte2); //Wrong obviously
		
		int myIntVal = 5/2;
		float myFloat = 5f / 2f;
		double myDouble = 5d / 2d; //Java defaults to double ;)
		
		System.out.println(myIntVal + " " + myFloat + " " + myDouble);
		
		int myPounds = 100;
		double myKiloConverter = 0.45359237;
		
		int convertTotal = (int)(myPounds * myKiloConverter);
		
		System.out.println("My Challenge: " + convertTotal);
		
		char myChar = 'c';
		int myInt2 = myChar;
		
		System.out.println("My Challenge: " + myChar);
		System.out.println("My Challenge: " + (char)myInt2);
	}
	
}

















