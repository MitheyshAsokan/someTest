
public class Main {
	
	public static void main(String[] args) {
		
		byte myByte = 10;
		short myShort = 20;
		int myInt = 50;
		
		long myLong = 50000L + 10L * (myByte + myShort + myInt);
		short myShort2 = (short) (50000 + 10 * (myByte + myShort + myInt));
		byte myByte2 = (byte) (1000 + 10 * (myByte + myShort + myInt));
		
		System.out.println("My challenge: " + myLong);
		System.out.println("My challenge: " + myShort2);
		System.out.println("My challenge: " + myByte2);
	}
	
}
